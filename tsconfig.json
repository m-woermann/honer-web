{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "types": ["three"],
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "three/examples/jsm/*": ["node_modules/three/examples/jsm/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}