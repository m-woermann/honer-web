---
// speaker-detail.astro - Speaker detail page with rotating 3D model
import speakersData from '../config/speakers.json';

// Get model from URL parameter
const url = Astro.url;
const modelPath = url.searchParams.get('model') || '/speaker.glb';

// Find the speaker data from config
let speakerInfo: any = {
    type: 'speaker',
    modelPath: modelPath,
    name: 'Speaker',
    description: 'Professional audio speaker',
    specs: {}
};

for (const [type, data] of Object.entries(speakersData.speakerTypes)) {
    if ((data as any).modelPath === modelPath) {
        speakerInfo = { type, ...data };
        break;
    }
}
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Speaker Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/three@0.158.0/build/three.min.js"></script>
    <script src="https://unpkg.com/three@0.158.0/examples/js/loaders/GLTFLoader.js"></script>
    <script src="https://unpkg.com/three@0.158.0/examples/js/loaders/DRACOLoader.js"></script>
</head>
<body>
    <div class="page-container">
        <!-- Main heading -->
        <div class="main-heading">
            <h1>Horner Audio</h1>
        </div>

        <button class="back-button" onclick="window.history.back()">‚Üê Back</button>

        <!-- Top third with 3D canvas -->
        <div class="model-section">
            <canvas class="webgl" data-model={speakerInfo.modelPath}></canvas>
        </div>

        <!-- Bottom two-thirds with speaker info -->
        <div class="info-section">
            <h1 id="speakerTitle">{speakerInfo.name}</h1>
            <p id="speakerDescription">{speakerInfo.description}</p>
            
            <div class="specs-grid" id="specsGrid">
                {speakerInfo.specs && Object.entries(speakerInfo.specs).map(([key, value]) => (
                    <div class="spec-card">
                        <div class="spec-label">{key}</div>
                        <div class="spec-value">{value}</div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: #1a1a1a;
            color: white;
            min-height: 100vh;
        }

        .page-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Main heading */
        .main-heading {
            position: fixed;
            top: 40px;
            left: 40px;
            z-index: 1000;
            pointer-events: none;
        }

        .main-heading h1 {
            font-family: 'Michroma', sans-serif;
            font-size: 3rem;
            font-weight: 400;
            color: #42cc5d;
            margin: 0;
            text-shadow: 0 0 20px rgba(66, 204, 93, 0.3);
            letter-spacing: 3px;
        }

        .back-button {
            position: fixed;
            top: 40px;
            right: 40px;
            background: transparent;
            border: 1px solid rgba(66, 204, 93, 0.3);
            color: #42cc5d;
            padding: 0.8rem 1.5rem;
            border-radius: 4px;
            font-family: 'Roboto', sans-serif;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .back-button:hover {
            background: rgba(66, 204, 93, 0.1);
            border-color: rgba(66, 204, 93, 0.5);
        }

        .model-section {
            height: 33.33vh;
            position: relative;
            background: #383e42; /* RAL 7016 Anthracite Grey */
        }

        .webgl {
            width: 100%;
            height: 100%;
            display: block;
        }

        .info-section {
            flex: 1;
            padding: 3rem;
            overflow-y: auto;
            background: #1a1a1a;
        }

        .info-section h1 {
            font-family: 'Michroma', sans-serif;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: white;
        }

        .info-section p {
            font-family: 'Roboto', sans-serif;
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 2rem;
            color: #ccc;
        }

        .specs-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .spec-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .spec-card:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .spec-label {
            font-family: 'Roboto', sans-serif;
            font-size: 0.9rem;
            font-weight: 600;
            color: #999;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .spec-value {
            font-family: 'Roboto', sans-serif;
            font-size: 1.1rem;
            color: white;
            font-weight: 400;
        }

        @media (max-width: 768px) {
            .main-heading h1 {
                font-size: 2rem;
                letter-spacing: 1px;
            }

            .main-heading {
                top: 20px;
                left: 20px;
            }

            .back-button {
                top: 20px;
                right: 20px;
                padding: 0.6rem 1rem;
                font-size: 0.8rem;
            }

            .info-section {
                padding: 2rem 1rem;
            }

            .info-section h1 {
                font-size: 2rem;
            }

            .specs-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
        }
    </style>

    <script is:inline>
        document.addEventListener('DOMContentLoaded', () => {
            console.log('Speaker detail page: DOM loaded, initializing...');
            
            const initViewer = (container, modelPath) => {
                console.log('initViewer called with:', container, modelPath);
                container.style.backgroundColor = 'magenta';
                
                // Check if THREE is available from the script tags
                if (typeof THREE === 'undefined') {
                    console.error('THREE.js not loaded! Make sure script tags are working.');
                    return;
                }
                
                console.log('THREE.js is available:', THREE);
                
                // Check if loaders are available
                if (typeof THREE.GLTFLoader === 'undefined') {
                    console.error('GLTFLoader not available in THREE object');
                    return;
                }
                
                console.log('THREE.GLTFLoader available, proceeding...');

                if (!container || !modelPath) {
                    console.error('Viewer initialization failed: container or modelPath is missing.');
                    return;
                }

                // Scene Setup
                const scene = new THREE.Scene();
                scene.background = new THREE.Color(0x383e42);

                // Camera and Renderer Setup
                const sizes = { width: container.clientWidth, height: container.clientHeight };
                const camera = new THREE.PerspectiveCamera(35, sizes.width / sizes.height, 0.1, 1000);
                camera.position.set(0, 0, 300);
                scene.add(camera);

                const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
                renderer.setSize(sizes.width, sizes.height);
                renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
                renderer.outputEncoding = THREE.sRGBEncoding;
                container.innerHTML = ''; // Clear container
                container.appendChild(renderer.domElement);

                // Lighting
                const ambientLight = new THREE.AmbientLight(0xffffff, 0.7);
                scene.add(ambientLight);
                const directionalLight = new THREE.DirectionalLight(0xffffff, 0.9);
                directionalLight.position.set(5, 5, 5);
                scene.add(directionalLight);

                // Model Loading
                const dracoLoader = new THREE.DRACOLoader();
                dracoLoader.setDecoderPath('https://www.gstatic.com/draco/versioned/decoders/1.4.3/');
                const gltfLoader = new THREE.GLTFLoader();
                gltfLoader.setDRACOLoader(dracoLoader);

                let modelGroup = null;

                gltfLoader.load(modelPath, (gltf) => {
                    console.log('Model loaded successfully!', gltf);
                    const renderGroup = new THREE.Group();
                    
                    gltf.scene.traverse((child) => {
                        if (child.isMesh && child.geometry) {
                            // Solid fill
                            const solidMaterial = new THREE.MeshBasicMaterial({ 
                                color: 0x383e42, 
                                polygonOffset: true, 
                                polygonOffsetFactor: 1, 
                                polygonOffsetUnits: 1 
                            });
                            const solidMesh = new THREE.Mesh(child.geometry, solidMaterial);
                            
                            // Green edges
                            const edges = new THREE.EdgesGeometry(child.geometry, 15);
                            const lineMaterial = new THREE.LineBasicMaterial({ color: 0x42cc5d });
                            const lineSegments = new THREE.LineSegments(edges, lineMaterial);
                            
                            renderGroup.add(solidMesh);
                            renderGroup.add(lineSegments);
                        }
                    });

                    // Center and scale
                    const box = new THREE.Box3().setFromObject(renderGroup);
                    const center = box.getCenter(new THREE.Vector3());
                    const size = box.getSize(new THREE.Vector3());
                    renderGroup.position.sub(center);
                    const maxDim = Math.max(size.x, size.y, size.z);
                    const scale = 150 / maxDim;
                    renderGroup.scale.setScalar(scale);
                    
                    modelGroup = renderGroup;
                    scene.add(modelGroup);
                    console.log('Model added to scene');
                }, (progress) => {
                    console.log('Loading progress:', (progress.loaded / progress.total * 100).toFixed(0) + '%');
                }, (error) => {
                    console.error('Error loading model:', error);
                });

                // Animation loop
                const clock = new THREE.Clock();
                const tick = () => {
                    if (modelGroup) {
                        modelGroup.rotation.y += clock.getDelta() * 0.4;
                    }
                    renderer.render(scene, camera);
                    window.requestAnimationFrame(tick);
                };
                tick();

                // Resize handling
                const resizeObserver = new ResizeObserver(() => {
                    sizes.width = container.clientWidth;
                    sizes.height = container.clientHeight;
                    camera.aspect = sizes.width / sizes.height;
                    camera.updateProjectionMatrix();
                    renderer.setSize(sizes.width, sizes.height);
                    renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
                });
                resizeObserver.observe(container);
            };

            // Initialize the viewer
            const canvasContainer = document.querySelector('.model-section');
            if (canvasContainer instanceof HTMLElement) {
                // Use the hard-coded model path instead of looking for data attributes
                const modelPath = '/speaker.glb';
                console.log('Using model path:', modelPath);
                initViewer(canvasContainer, modelPath);
            } else {
                console.error('Could not find canvas container.');
            }
        });
    </script>
</body>
</html>