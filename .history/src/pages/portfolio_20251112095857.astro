// portfolio.astro - Portfolio/Projects listing page
import fs from 'fs';
import path from 'path';

// Read project directories from src/projects
const projectsDir = path.join(process.cwd(), 'src', 'projects');
const projectDirs = fs.readdirSync(projectsDir, { withFileTypes: true })
    .filter(dirent => dirent.isDirectory())
    .map(dirent => dirent.name);

// Create projects array from directory structure
const projects = projectDirs.map(dirName => {
    // Read the about file for this project
    const aboutPath = path.join(projectsDir, dirName, 'about');
    let description = '';
    let content = '';
    
    try {
        content = fs.readFileSync(aboutPath, 'utf-8');
        // Extract first paragraph as description
        const paragraphs = content.split('\n\n');
        description = paragraphs.find(p => p.trim().length > 0)?.trim() || '';
        // Remove markdown formatting from description
        description = description.replace(/^[#*\s]*/, '').trim();
    } catch (error) {
        description = `Professional audio installation project`;
    }

    return {
        id: dirName.toLowerCase().replace(/\s+/g, '-'),
        name: dirName.split(' ').map(word => 
            word.charAt(0).toUpperCase() + word.slice(1)
        ).join(' '),
        description: description,
        mainImage: `/projects/${dirName.toLowerCase().replace(/\s+/g, '-')}/main.jpg`,
        specs: {
            'Project Type': 'Audio Installation',
            'Status': 'Completed'
        },
        content: content
    };
});
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio - Horner Audio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="page-container">
        <!-- Project Grid -->
        <div class="project-container">
            <button class="back-button" onclick="window.history.back()">BACK</button>
            <h2 class="section-title">Portfolio</h2>
            
            <div class="project-grid">
                {projects.map((project) => (
                    <div class="project-card" data-project-id={project.id}>
                        <div class="project-image" data-image={project.mainImage}></div>
                        <div class="project-info">
                            <h3 class="project-name">
                                <span class="project-title">{project.name}</span>
                            </h3>
                            <p class="project-description">{project.description}</p>
                            <ul class="project-specs">
                                {Object.entries(project.specs).map(([key, value]) => (
                                    <li><strong>{key}:</strong> {value}</li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <style>
        :root {
            --color-anthracite: #383e42;  /* RAL 7016 Anthracite Grey */
            --color-green: #42cc5d;       /* Horner Audio Green */
            --color-dark-bg: #1a1a1a;     /* Dark background */
            --color-light-grey: #A8BAC6;  /* Light grey for ground */
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: var(--color-dark-bg);
            color: white;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .page-container {
            min-height: 100vh;
            background: var(--color-dark-bg);
        }

        .project-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 40px 40px;
            position: relative;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            background: transparent;
            color: #42cc5d;
            border: none;
            padding: 0;
            font-family: 'Michroma', sans-serif;
            font-size: 14px;
            font-weight: 400;
            letter-spacing: 2px;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 1000;
            text-shadow: none;
        }

        .back-button:hover {
            color: #42cc5d;
            text-shadow: 0 0 8px rgba(66, 204, 93, 0.5);
        }

        .section-title {
            font-family: 'Michroma', sans-serif;
            font-size: 2rem;
            color: var(--color-green);
            margin-bottom: 3rem;
            text-align: center;
        }

        .project-grid {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        .project-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 0;
            overflow: hidden;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: row;
            align-items: center;
            text-decoration: none;
            color: white;
            cursor: pointer;
            height: 200px;
        }

        .project-card:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: color-mix(in srgb, var(--color-green) 30%, transparent);
        }

        .project-image {
            width: 250px;
            height: 200px;
            flex-shrink: 0;
            background: var(--color-anthracite);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        .project-info {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .project-name {
            font-family: 'Roboto', sans-serif;
            font-size: 1.3rem;
            font-weight: 600;
            color: white;
            margin-bottom: 0.5rem;
        }

        .project-title {
            color: white;
        }

        .project-description {
            font-size: 0.9rem;
            color: white;
            margin-bottom: 1rem;
        }

        .project-specs {
            list-style: none;
        }

        .project-specs li {
            font-size: 0.85rem;
            color: white;
            padding: 0.3rem 0;
        }

        .project-specs li strong {
            color: white;
            margin-right: 0.3rem;
        }

        @media (max-width: 768px) {
            .project-container {
                padding: 40px 20px 40px;
            }

            .back-button {
                top: 20px;
                left: 20px;
            }

            .project-card {
                flex-direction: column;
                height: auto;
            }

            .project-image {
                width: 100%;
                height: 200px;
            }

            .project-info {
                padding: 1rem;
            }

            .section-title {
                font-size: 1.5rem;
                margin-bottom: 2rem;
                margin-top: 60px;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            console.log('DOM loaded, initializing project images...');
            
            // Set background images for project cards
            const projectImages = document.querySelectorAll('.project-image');
            projectImages.forEach((imageElement) => {
                const imagePath = imageElement.getAttribute('data-image');
                if (imagePath && imageElement instanceof HTMLElement) {
                    imageElement.style.backgroundImage = `url('${imagePath}')`;
                }
            });

            // Add click handlers to project cards
            const projectCards = document.querySelectorAll('.project-card');
            projectCards.forEach((card) => {
                card.addEventListener('click', () => {
                    const projectId = card.getAttribute('data-project-id');
                    
                    if (!projectId) {
                        console.error('Project ID not found');
                        return;
                    }
                    
                    // Navigate to project detail page
                    window.location.href = `/project-detail?id=${projectId}`;
                });
            });
        });
    </script>
</body>
</html>