// speaker-detail.astro - Speaker detail page with rotating 3D model
// Load all speaker configs to ensure we have the latest data
const speakerFiles = await Astro.glob('../config/speakers/*.json');
const speakerConfigs = speakerFiles.map(file => file.default);
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Speaker Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Desktop Header (StaticPageLayout style) -->
    <div class="desktop-header">
        <button id="backButtonDesktop" class="back-button-desktop">BACK</button>
    </div>
    
    <div class="desktop-title-container">
        <h1 id="speakerTitleDesktop" class="desktop-title">Loading...</h1>
    </div>

    <div class="page-container">
        <!-- Top third with 3D canvas (Mobile) / Left square (Desktop) -->
        <div class="model-section">
            <canvas class="webgl"></canvas>
            <button class="back-button mobile-only" onclick="window.history.back()">BACK</button>
        </div>

        <!-- Bottom two-thirds with speaker info (Mobile) / Right scrollable (Desktop) -->
        <div class="info-section">
            <h1 id="speakerTitle" class="mobile-only">Loading...</h1>
            
            <div class="specs-grid" id="specsGrid">
                <!-- Dynamic content will be populated here -->
            </div>

            <div class="description-container">
                <h3 class="description-title">DESCRIPTION</h3>
                <p id="speakerDescription">Please wait...</p>
            </div>
        </div>
    </div>

    <!-- Full Screen Carousel Section -->
    <div class="carousel-section" id="carouselSection" style="display: none;">
        <div class="carousel-container">
            <div class="carousel" id="imageCarousel">
                <!-- Images will be populated by JS -->
            </div>
            
            <div class="carousel-navigation" id="carouselNav">
                <button class="carousel-btn carousel-prev" id="prevBtn" aria-label="Previous image">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M15 18l-6-6 6-6"/>
                    </svg>
                </button>
                <button class="carousel-btn carousel-next" id="nextBtn" aria-label="Next image">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 18l6-6-6-6"/>
                    </svg>
                </button>
            </div>
            
            <div class="carousel-counter" id="carouselCounter"></div>
            
            <div class="carousel-dots" id="carouselDots">
                <!-- Dots will be populated by JS -->
            </div>
        </div>
    </div>

    <style>
        :root {
            --color-anthracite: #383e42;  /* RAL 7016 Anthracite Grey */
            --color-green: #42cc5d;       /* Horner Audio Green */
            --color-dark-bg: #1a1a1a;     /* Dark background */
            --color-light-grey: #A8BAC6;  /* Light grey for ground */
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html {
            scroll-snap-type: y mandatory;
            scroll-behavior: smooth;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: var(--color-dark-bg);
            color: white;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .page-container {
            min-height: 100vh;
            height: auto;
            display: flex;
            flex-direction: column;
            scroll-snap-align: start;
        }

        /* Desktop elements hidden by default */
        .desktop-header, .desktop-title-container {
            display: none;
        }

        .mobile-only {
            display: block;
        }

        .model-section {
            height: 33.33vh;
            position: relative;
            background: var(--color-anthracite);
            width: 100%;
        }

        .webgl {
            width: 100%;
            height: 100%;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            background: transparent;
            color: #42cc5d;
            border: none;
            padding: 0;
            font-family: 'Michroma', sans-serif;
            font-size: 14px;
            font-weight: 400;
            letter-spacing: 2px;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 1000;
            text-shadow: none;
        }

        .back-button:hover {
            color: #42cc5d;
            text-shadow: 0 0 8px rgba(66, 204, 93, 0.5);
        }

        .info-section {
            min-height: 66.67vh;
            height: auto;
            padding: 3rem;
            overflow-y: visible;
            background: var(--color-dark-bg);
        }

        h1 {
            font-family: 'Michroma', sans-serif;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: white;
        }

        p {
            font-family: 'Roboto', sans-serif;
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 2rem;
            color: #ccc;
        }

        .description-container {
            margin-top: 3rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            padding-top: 2rem;
        }

        .description-title {
            font-family: 'Michroma', sans-serif;
            font-size: 1.2rem;
            color: #42cc5d;
            margin-bottom: 1rem;
            letter-spacing: 1px;
            font-weight: 400;
        }

        .specs-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .spec-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 0;
            padding: 1.5rem;
            transition: all 0.3s ease;
