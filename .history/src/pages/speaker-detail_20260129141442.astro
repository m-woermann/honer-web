        .spec-card:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .spec-label {
            font-family: 'Roboto', sans-serif;
            font-size: 0.9rem;
            font-weight: 600;
            color: #999;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .spec-value {
            font-family: 'Roboto', sans-serif;
            font-size: 1.1rem;
            color: white;
            font-weight: 400;
        }

        /* Carousel Styles */
        .carousel-section {
            width: 100%;
            height: 100vh;
            background: var(--color-dark-bg);
            position: relative;
            z-index: 20; /* Above the model section if needed */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            scroll-snap-align: start;
        }

        .carousel-container {
            position: relative;
            width: 95%;
            max-width: 1600px;
            height: 85vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .carousel {
            position: relative;
            width: 100%;
            height: 100%;
        }

        .carousel-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden; /* Ensure it's not clickable/visible when opacity is 0 */
            transition: opacity 0.4s ease, visibility 0.4s;
            pointer-events: none;
        }

        .carousel-slide.active {
            opacity: 1;
            visibility: visible;
            z-index: 1;
            pointer-events: auto;
        }

        .carousel-slide img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .carousel-navigation {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 100%;
            display: flex;
            justify-content: space-between;
            padding: 0 20px;
            pointer-events: none;
            z-index: 10;
        }

        .carousel-btn {
            background: rgba(0, 0, 0, 0.4);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            pointer-events: auto;
            z-index: 100;
        }

        .carousel-btn:hover {
            background: rgba(66, 204, 93, 0.3);
            border-color: #42cc5d;
            color: #42cc5d;
        }

        .carousel-btn:active {
            transform: scale(0.95);
        }

        .carousel-dots {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 12px;
            z-index: 10;
        }

        .carousel-dot {
            width: 8px;
            height: 8px;
            background: rgba(255, 255, 255, 0.3);
            border: none;
            border-radius: 50%;
            cursor: pointer;
            transition: background-color 0.3s ease;
            padding: 0;
        }

        .carousel-dot:hover {
            background: rgba(255, 255, 255, 0.6);
        }

        .carousel-dot.active {
            background: white;
        }

        .carousel-counter {
            position: absolute;
            bottom: 50px;
            right: 20px;
            color: rgba(255, 255, 255, 0.5);
            font-family: 'Michroma', sans-serif;
            font-size: 12px;
            letter-spacing: 1px;
            z-index: 10;
            pointer-events: none;
        }

        /* Desktop Layout */
        /* Only switch to desktop layout if we have enough width for a square model + content */
        @media (min-width: 768px) and (min-aspect-ratio: 13/10) {
            .page-container {
                flex-direction: row;
                height: auto;
                min-height: 100vh;
                position: relative; /* Context for sticky */
                align-items: flex-start; /* Critical: prevents sticky item from stretching to full height */
            }

            .mobile-only {
                display: none !important;
            }

            /* Desktop Header */
            .desktop-header {
                display: flex;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 64px;
                background: var(--color-dark-bg);
                z-index: 900;
                align-items: center;
                justify-content: center;
            }

            .back-button-desktop {
                position: absolute;
                left: 20px;
                font-family: 'Michroma', sans-serif;
                font-size: 14px;
                font-weight: 400;
                color: #42cc5d;
                letter-spacing: 2px;
                text-transform: uppercase;
                transition: all 0.3s ease;
                cursor: pointer;
                background: transparent;
                border: none;
                padding: 0;
                text-shadow: none;
                pointer-events: auto;
            }

            .back-button-desktop:hover {
                text-shadow: 0 0 8px rgba(66, 204, 93, 0.5);
            }

            /* Desktop Title */
            .desktop-title-container {
                display: block;
                position: fixed;
                left: 50%;
                top: 32px;
                transform: translateX(-50%) translateY(-50%) scale(0.4);
                z-index: 950;
                pointer-events: none;
            }

            .desktop-title {
                font-family: 'Michroma', sans-serif;
                font-size: clamp(3rem, 8vw, 5rem);
                color: white;
                margin: 0;
                font-weight: 400;
                letter-spacing: 0.1em;
                line-height: 1;
                text-align: center;
                white-space: nowrap;
            }

            /* Model Section - Left Square - Sticky */
            .model-section {
                position: sticky;
                top: 0;
                left: 0;
                width: 100vh;
                height: 100vh;
                z-index: 10;
                flex-shrink: 0; /* Prevent shrinking */
