            /* Info Section - Right Scrollable */
            .info-section {
                margin-left: 0; /* Remove margin */
                width: calc(100% - 100vh); /* Take remaining width */
                height: auto;
                min-height: 100vh;
                padding: 120px 4rem 4rem 4rem;
                overflow-y: visible;
            }

            .specs-grid {
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            }
        }

        @media (max-width: 768px), (max-aspect-ratio: 13/10) {
            .info-section {
                padding: 2rem 1rem;
            }

            h1 {
                font-size: 2rem;
            }

            .specs-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
        }
    </style>

    <script define:vars={{speakerConfigs}}>
        window.serverSpeakerConfigs = speakerConfigs;
    </script>

    <script>
        import * as THREE from 'three';
        import { GLTFLoader } from 'three/examples/jsm/loaders/GLTFLoader.js';
        import { DRACOLoader } from 'three/examples/jsm/loaders/DRACOLoader.js';

        // Get speaker data from sessionStorage
        const speakerDataString = sessionStorage.getItem('speakerDetail');
        if (!speakerDataString) {
            // If no data, redirect back
            window.location.href = '/';
        }

        let speakerData = JSON.parse(speakerDataString || '{}');
        
        // Try to find the latest config from the server-side loaded configs
        // This ensures we have the latest data (like images) even if sessionStorage is stale
        console.log('Server Configs Available:', window.serverSpeakerConfigs);
        
        if (speakerData.name && window.serverSpeakerConfigs) {
            // Normalize names for comparison (trim, lowercase) to be safe
            const targetName = speakerData.name.trim().toLowerCase();
            const freshConfig = window.serverSpeakerConfigs.find(c => c.name.trim().toLowerCase() === targetName);
            
            if (freshConfig) {
                console.log('Found fresh config for:', speakerData.name);
                // Merge fresh config into speakerData, preferring fresh data
                // We keep modelPath from sessionStorage if it exists, as it might be dynamic
                const modelPath = speakerData.modelPath;
                speakerData = { ...speakerData, ...freshConfig };
                if (modelPath) speakerData.modelPath = modelPath;
                
                // Ensure speakerType is set (it might be called 'name' in config)
                if (!speakerData.speakerType) speakerData.speakerType = freshConfig.name;
            } else {
                console.warn('Could not find fresh config for:', speakerData.name);
            }
        }

        console.log('Speaker Detail Data (Final):', speakerData); // Debug log
        if (speakerData.images) {
            console.log('Images found:', speakerData.images);
        } else {
            console.log('No images found in speakerData');
        }

        // Update page content
        const titleElement = document.getElementById('speakerTitle');
        const titleElementDesktop = document.getElementById('speakerTitleDesktop');
        const descElement = document.getElementById('speakerDescription');
        
        if (titleElement) titleElement.textContent = speakerData.speakerType || 'Speaker';
        if (titleElementDesktop) titleElementDesktop.textContent = speakerData.speakerType || 'Speaker';
        if (descElement) descElement.textContent = speakerData.description || 'No description available';

        // Desktop back button
        const backButtonDesktop = document.getElementById('backButtonDesktop');
        if (backButtonDesktop) {
            backButtonDesktop.addEventListener('click', () => {
                window.history.back();
            });
        }

        // Populate specs
        const specsGrid = document.getElementById('specsGrid');
        if (specsGrid && speakerData.specs) {
            // Add type as first spec if available
            if (speakerData.name && speakerData.speakerType) {
                const typeCard = document.createElement('div');
                typeCard.className = 'spec-card';
                typeCard.innerHTML = `
                    <div class="spec-label">Type</div>
                    <div class="spec-value">${speakerData.name}</div>
                `;
                specsGrid.appendChild(typeCard);
            }

            // Add other specs
            Object.entries(speakerData.specs).forEach(([key, value]) => {
                const specCard = document.createElement('div');
                specCard.className = 'spec-card';
                specCard.innerHTML = `
                    <div class="spec-label">${key}</div>
                    <div class="spec-value">${value}</div>
                `;
                if (specsGrid) specsGrid.appendChild(specCard);
            });
        }

        // Three.js setup for rotating model
        const canvas = document.querySelector('canvas.webgl');
        if (!canvas) throw new Error('Canvas not found');

    const scene = new THREE.Scene();
    scene.background = new THREE.Color(0x383e42); // Anthracite background to match wireframe style

        const getCanvasSize = () => {
            // Match CSS media query: min-width: 768px AND min-aspect-ratio: 13/10 (1.3)
            const isDesktop = window.innerWidth >= 768 && (window.innerWidth / window.innerHeight) >= 1.3;
            
            if (isDesktop) {
                // Desktop: Square based on viewport height
                const size = window.innerHeight;
                return { width: size, height: size };
            } else {
                // Mobile: Full width, 1/3 height
                return { width: window.innerWidth, height: window.innerHeight * 0.3333 };
            }
        };

        const sizes = getCanvasSize();

        const camera = new THREE.PerspectiveCamera(50, sizes.width / sizes.height, 0.1, 1000);
        camera.position.set(0, 0, 300);
        scene.add(camera);

        const renderer = new THREE.WebGLRenderer({
            canvas: canvas,
            antialias: true,
        });
        renderer.setSize(sizes.width, sizes.height);
        renderer.shadowMap.enabled = true;
        renderer.outputEncoding = THREE.sRGBEncoding;
        renderer.shadowMap.type = THREE.PCFSoftShadowMap;

        // Handle window resize
        window.addEventListener('resize', () => {
            const newSizes = getCanvasSize();
            sizes.width = newSizes.width;
            sizes.height = newSizes.height;

            camera.aspect = sizes.width / sizes.height;
            camera.updateProjectionMatrix();

            renderer.setSize(sizes.width, sizes.height);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        });

        // Lights
        const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
        scene.add(ambientLight);

        const directionalLight = new THREE.DirectionalLight(0xffffff, 0.8);
        directionalLight.position.set(5, 5, 5);
        directionalLight.castShadow = true;
        scene.add(directionalLight);

        // Load the specific speaker model
        const dracoLoader = new DRACOLoader();
        dracoLoader.setDecoderPath('/draco/');

        const gltfLoader = new GLTFLoader();
        gltfLoader.setDRACOLoader(dracoLoader);

        let model: THREE.Object3D | null = null;
        
        // Determine the correct model path
        let modelPath = '/speaker.glb'; // default fallback
        if (speakerData.modelPath) {
            modelPath = speakerData.modelPath;
        } else if (speakerData.speakerType === 'Subwoofer') {
            modelPath = '/sub.glb';
        } else if (speakerData.speakerType === 'Top') {
            modelPath = '/speaker.glb';
        }
        
        console.log('Loading model:', modelPath, 'for speaker type:', speakerData.speakerType); // Debug log

        gltfLoader.load(
            modelPath,
            (gltf) => {
                const loadedModel = gltf.scene;
                
                if (loadedModel) {
                    // Get bounding box of the loaded model
                    const box = new THREE.Box3().setFromObject(loadedModel);
                    const center = box.getCenter(new THREE.Vector3());
                    const size = box.getSize(new THREE.Vector3());
                    
                    // Create a group to handle centering and rotation
                    const modelGroup = new THREE.Group();
                    
                    // Create wireframe representation like in the index page
                    loadedModel.traverse((child: THREE.Object3D) => {
                        if ((child as THREE.Mesh).isMesh && (child as THREE.Mesh).geometry) {
                            const mesh = child as THREE.Mesh;
                            
                            // Clone the geometry and apply the world matrix to get proper positioning
                            const geometry = mesh.geometry.clone();
                            geometry.applyMatrix4(mesh.matrixWorld);
                            
                            // Create solid fill with anthracite background color
                            const solidMaterial = new THREE.MeshBasicMaterial({ 
                                color: 0x383e42, // Anthracite background color
                                polygonOffset: true, 
                                polygonOffsetFactor: 1, 
                                polygonOffsetUnits: 1 
                            });
                            const solidMesh = new THREE.Mesh(geometry, solidMaterial);
                            
                            // Create green wireframe edges
                            const edges = new THREE.EdgesGeometry(geometry, 15);
                            const lineMaterial = new THREE.LineBasicMaterial({ color:0xffffff}); // White color
                            const wireframe = new THREE.LineSegments(edges, lineMaterial);
                            
                            // Center both meshes
                            solidMesh.position.set(-center.x, -center.y, -center.z);
                            wireframe.position.set(-center.x, -center.y, -center.z);
                            
                            // Add both solid and wireframe to the group
                            modelGroup.add(solidMesh);
                            modelGroup.add(wireframe);
                        }
                    });
                    
                    // Scale the group to fit nicely in view
                    const maxDim = Math.max(size.x, size.y, size.z);
                    const scale = 150 / maxDim;
                    modelGroup.scale.setScalar(scale);
                    
                    // Set the model reference to the group for rotation
                    model = modelGroup;
                    scene.add(modelGroup);
                }
            },
            undefined,
            (error) => {
                console.error('Error loading model:', error);
            }
        );

        // Animation loop
        const clock = new THREE.Clock();

        function animate() {
            const deltaTime = clock.getDelta();
            
            // Rotate the model slowly
            if (model) {
                model.rotation.y += deltaTime * 0.5; // Rotate at 0.5 radians per second
            }
            
            renderer.render(scene, camera);
            requestAnimationFrame(animate);
        }

        // Carousel Logic
        const carouselSection = document.getElementById('carouselSection');
        const carousel = document.getElementById('imageCarousel');
        const dotsContainer = document.getElementById('carouselDots');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const carouselNav = document.getElementById('carouselNav');
        const carouselCounter = document.getElementById('carouselCounter');
        
        // Use images from speakerData
        // If no images are defined in the JSON, we won't show the carousel
        console.log('Speaker Data in Detail Page:', speakerData);
        console.log('Images in Speaker Data:', speakerData.images);
        
        const displayImages = speakerData.images || [];
        console.log('Display Images:', displayImages);
        
        if (displayImages.length > 0 && carouselSection) {
            carouselSection.style.display = 'flex';
            
            // Hide navigation if only 1 image
            if (displayImages.length <= 1) {
                if (carouselNav) carouselNav.style.display = 'none';
                if (dotsContainer) dotsContainer.style.display = 'none';
            }
            
            let currentSlide = 0;
            
            // Create single image element
            const imgElement = document.createElement('img');
            imgElement.style.opacity = '0';
            imgElement.style.transition = 'opacity 0.3s ease';
            imgElement.style.maxWidth = '100%';
            imgElement.style.maxHeight = '100%';
            imgElement.style.objectFit = 'contain';
            carousel.appendChild(imgElement);

            // Create dots
            displayImages.forEach((_, index) => {
                const dot = document.createElement('button');
                dot.className = `carousel-dot ${index === 0 ? 'active' : ''}`;
                dot.addEventListener('click', () => goToSlide(index));
                dotsContainer.appendChild(dot);
            });
            
            function updateImage() {
                // Fade out
                imgElement.style.opacity = '0';
                
                setTimeout(() => {
                    // Change source
                    const src = displayImages[currentSlide];
                    const cacheBustSrc = `${src}?v=${Date.now()}`; // Keep cache busting for now
                    console.log(`Switching to slide ${currentSlide}: ${cacheBustSrc}`);
                    imgElement.src = cacheBustSrc;
                    
                    // Update dots
                    const dots = document.querySelectorAll('.carousel-dot');
                    dots.forEach((dot, index) => {
                        if (index === currentSlide) dot.classList.add('active');
                        else dot.classList.remove('active');
                    });

                    // Update counter
                    if (carouselCounter) {
                        carouselCounter.textContent = `${currentSlide + 1} / ${displayImages.length}`;
                    }

                    // Fade in after image loads (or small delay)
                    imgElement.onload = () => {
                        imgElement.style.opacity = '1';
                    };
                    // Fallback if cached/fast
                    setTimeout(() => {
                        imgElement.style.opacity = '1';
                    }, 50);
                }, 300); // Wait for fade out
            }
            
            // Initialize
            updateImage();
            
            function goToSlide(index) {
                if (index === currentSlide) return;
                currentSlide = index;
                updateImage();
            }
            
            function nextSlide() {
                const nextIndex = (currentSlide + 1) % displayImages.length;
                goToSlide(nextIndex);
            }
            
            function prevSlide() {
                const prevIndex = (currentSlide - 1 + displayImages.length) % displayImages.length;
                goToSlide(prevIndex);
            }
            
            if (prevBtn) prevBtn.addEventListener('click', prevSlide);
            if (nextBtn) nextBtn.addEventListener('click', nextSlide);
            
            // Keyboard navigation
            document.addEventListener('keydown', (e) => {
                // Only navigate if carousel is visible
                if (carouselSection.style.display !== 'none') {
                    if (e.key === 'ArrowLeft') prevSlide();
                    if (e.key === 'ArrowRight') nextSlide();
                }
            });

            // Touch/Swipe Support
            let touchStartX = 0;
            let touchEndX = 0;
            
            carousel.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
            }, { passive: true });
            
            carousel.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, { passive: true });
            
            function handleSwipe() {
                const swipeThreshold = 50; // Minimum distance for swipe
                if (touchEndX < touchStartX - swipeThreshold) {
                    nextSlide(); // Swipe Left -> Next
                }
                if (touchEndX > touchStartX + swipeThreshold) {
                    prevSlide(); // Swipe Right -> Prev
                }
            }
        }

        // Start animation
        animate();
    </script>
