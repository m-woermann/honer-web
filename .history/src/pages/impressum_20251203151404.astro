    <style>
        :root {
            --color-anthracite: #383e42;
            --color-green: #42cc5d;
            --color-dark-bg: #1a1a1a;
            --color-light-grey: #A8BAC6;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: var(--color-dark-bg);
            color: white;
            line-height: 1.6;
        }

        .page-container {
            min-height: 100vh;
            background: var(--color-dark-bg);
            padding: 20px;
        }

        .contact-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 40px;
            position: relative;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            background: transparent;
            color: white;
            border: 1px solid white;
            padding: 8px 16px;
            font-family: 'Michroma', monospace;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .back-button:hover {
            background: var(--color-green);
            color: white;
            border-color: var(--color-green);
        }

        .contact-title {
            font-family: 'Michroma', monospace;
            font-size: 2.5rem;
            color: white;
            text-align: center;
            margin-bottom: 1rem;
            margin-top: 60px;
        }

        .contact-subtitle {
            text-align: center;
            color: var(--color-light-grey);
            margin-bottom: 3rem;
            font-size: 1.1rem;
        }

        .contact-section {
            margin-bottom: 3rem;
            background: rgba(255, 255, 255, 0.05);
            padding: 2rem;
            border-radius: 8px;
            border-left: 4px solid var(--color-green);
        }

        .contact-section h2 {
            font-family: 'Michroma', monospace;
            font-size: 1.3rem;
            color: var(--color-green);
            margin-bottom: 1.5rem;
            text-transform: uppercase;
        }

        .contact-details {
            display: grid;
            gap: 1rem;
        }

        .contact-item {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 1rem;
            align-items: start;
        }

        .contact-label {
            font-weight: 600;
            color: var(--color-light-grey);
            font-size: 0.9rem;
        }

        .contact-value {
            color: white;
            font-size: 0.95rem;
        }

        .contact-link {
            color: var(--color-green);
            text-decoration: none;
            transition: color 0.3s ease;
            font-size: 0.95rem;
        }

        .contact-link:hover {
            color: white;
            text-decoration: underline;
        }

        .disclaimer-text {
            color: var(--color-light-grey);
            font-size: 0.9rem;
            line-height: 1.6;
        }

        .disclaimer-text p {
            margin-bottom: 1rem;
        }

        .disclaimer-text strong {
            color: white;
        }

        @media (max-width: 768px) {
            .contact-container {
                padding: 20px;
            }

            .contact-title {
                font-size: 2rem;
                margin-top: 80px;
            }

            .contact-item {
                grid-template-columns: 1fr;
                gap: 0.5rem;
            }

            .contact-section {
                padding: 1.5rem;
            }
        }

        @media (max-width: 480px) {
            .contact-title {
                font-size: 1.5rem;
            }
            
            .contact-section h2 {
                font-size: 1.1rem;
            }

            .contact-section {
                padding: 1rem;
                margin-bottom: 2rem;
            }
        }
