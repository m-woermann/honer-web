// products.astro - Product listing page
import speakersData from '../config/speakers.json';

const products = Object.entries(speakersData.speakerTypes).map(([type, data]) => ({
  type,
  ...data
}));
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products - Horner Audio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="page-container">
        <!-- Product Grid -->
        <div class="product-container">
            <h2 class="section-title">Products</h2>
            
            <div class="product-grid">
                {products.map((product) => (
                    <div class="product-card" data-product-type={product.type} data-model-path={product.modelPath}>
                        <div class="product-image" data-model={product.modelPath}></div>
                        <div class="product-info">
                            <h3 class="product-name">
                                <span class="product-model">{product.name}</span>
                            </h3>
                            <p class="product-description">{product.description}</p>
                            <ul class="product-specs">
                                {Object.entries(product.specs).map(([key, value]) => (
                                    <li><strong>{key}:</strong> {value}</li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Bottom scrolling banner -->
        <div class="bottom-banner">
            <div class="banner-content">
                <span class="banner-text">
                    <a href="/" class="banner-link">HOME</a> • 
                    <a href="/products" class="banner-link">PRODUCTS</a> • 
                    <span class="banner-link">CONTACT</span> • 
                    <span class="banner-link">ABOUT</span> • 
                    <span class="banner-link">IMPRESSUM</span> • 
                    <span class="banner-link">PRIVACY</span> • 
                    <span class="banner-link">TERMS</span> • 
                    <span class="banner-link">SUPPORT</span> • 
                    <a href="/" class="banner-link">HOME</a> • 
                    <a href="/products" class="banner-link">PRODUCTS</a> • 
                    <span class="banner-link">CONTACT</span> • 
                    <span class="banner-link">ABOUT</span> • 
                    <span class="banner-link">IMPRESSUM</span> • 
                    <span class="banner-link">PRIVACY</span> • 
                    <span class="banner-link">TERMS</span> • 
                    <span class="banner-link">SUPPORT</span> • 
                </span>
            </div>
        </div>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: #1a1a1a; /* Match main viewer dark background */
            color: white;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .page-container {
            min-height: 100vh;
            padding-bottom: 60px;
            background: #1a1a1a; /* Match main viewer */
        }

        .product-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 40px 40px;
        }

        .section-title {
            font-family: 'Michroma', sans-serif;
            font-size: 2rem;
            color: #42cc5d;
            margin-bottom: 3rem;
            text-align: center;
        }

        .product-grid {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        .product-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            overflow: hidden;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: row;
            align-items: center;
            text-decoration: none;
            color: white;
            cursor: pointer;
            height: 200px;
        }

        .product-card:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(66, 204, 93, 0.3);
            transform: translateX(8px);
        }

        .product-image {
            width: 250px;
            height: 200px;
            flex-shrink: 0;
            background: #383e42; /* RAL 7016 for model background */
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        .product-image canvas {
            width: 100%;
            height: 100%;
        }

        .product-info {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .product-name {
            font-family: 'Roboto', sans-serif;
            font-size: 1.3rem;
            font-weight: 600;
            color: white;
            margin-bottom: 0.5rem;
        }

        .product-model {
            color: #42cc5d;
        }

        .product-description {
            font-size: 0.9rem;
            color: #999;
            margin-bottom: 1rem;
        }

        .product-specs {
            list-style: none;
        }

        .product-specs li {
            font-size: 0.85rem;
            color: #ccc;
            padding: 0.3rem 0;
        }

        .product-specs li strong {
            color: #42cc5d;
            margin-right: 0.3rem;
        }

        /* Bottom scrolling banner */
        .bottom-banner {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background: transparent;
            z-index: 999;
            overflow: hidden;
            display: flex;
            align-items: center;
        }

        .banner-content {
            position: absolute;
            white-space: nowrap;
            height: 100%;
            display: flex;
            align-items: center;
        }

        .banner-text {
            font-family: 'Michroma', sans-serif;
            font-size: 14px;
            font-weight: 400;
            color: #42cc5d;
            letter-spacing: 2px;
            display: inline-block;
            animation: scroll-banner 60s linear infinite;
        }

        .banner-link {
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            color: #42cc5d;
        }

        .banner-link:hover {
            text-shadow: 0 0 8px rgba(66, 204, 93, 0.5);
        }

        @keyframes scroll-banner {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-50%);
            }
        }

            @media (max-width: 768px) {
            .main-heading h1 {
                font-size: 2rem;
                letter-spacing: 1px;
            }

            .main-heading {
                top: 20px;
                left: 20px;
            }

            .back-button {
                top: 20px;
                right: 20px;
                padding: 0.6rem 1rem;
                font-size: 0.8rem;
            }

            .product-container {
                padding: 100px 20px 40px;
            }

            .product-card {
                flex-direction: column;
                height: auto;
            }

            .product-image {
                width: 100%;
                height: 200px;
            }

            .product-info {
                padding: 1rem;
            }

            .section-title {
                font-size: 1.5rem;
                margin-bottom: 2rem;
            }
        }
    </style>

    <script>
        import * as THREE from 'three';
        import { GLTFLoader } from 'three/examples/jsm/loaders/GLTFLoader.js';
        import { DRACOLoader } from 'three/examples/jsm/loaders/DRACOLoader.js';

        function initViewer(container, modelPath) {
            console.log('Initializing viewer for:', modelPath);
            
            if (!container || !modelPath) {
                console.error('Viewer initialization failed: container or modelPath is missing.');
                return;
            }

            // Scene Setup
            const scene = new THREE.Scene();
            scene.background = new THREE.Color(0x383e42); // Dark background to match wireframe style

            // Camera and Renderer Setup
            const sizes = { width: container.clientWidth, height: container.clientHeight };
            const camera = new THREE.PerspectiveCamera(35, sizes.width / sizes.height, 0.1, 1000);
            camera.position.set(0, 0, 300);
            scene.add(camera);

            const renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            renderer.setSize(sizes.width, sizes.height);
            renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            renderer.outputEncoding = THREE.sRGBEncoding;
            container.innerHTML = ''; // Clear container
            container.appendChild(renderer.domElement);

            // Lighting
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.7);
            scene.add(ambientLight);
            const directionalLight = new THREE.DirectionalLight(0xffffff, 0.9);
            directionalLight.position.set(5, 5, 5);
            scene.add(directionalLight);

            // Load the model
            const dracoLoader = new DRACOLoader();
            dracoLoader.setDecoderPath('/draco/');

            const gltfLoader = new GLTFLoader();
            gltfLoader.setDRACOLoader(dracoLoader);

            let model: THREE.Object3D | null = null;

            gltfLoader.load(
                modelPath,
                (gltf) => {
                    const loadedModel = gltf.scene;
                    
                    if (loadedModel) {
                        // Get bounding box of the loaded model
                        const box = new THREE.Box3().setFromObject(loadedModel);
                        const center = box.getCenter(new THREE.Vector3());
                        const size = box.getSize(new THREE.Vector3());
                        
                        // Create a group to handle centering and rotation
                        const modelGroup = new THREE.Group();
                        
                        // Create wireframe representation like in the index page
                        loadedModel.traverse((child: THREE.Object3D) => {
                            if ((child as THREE.Mesh).isMesh && (child as THREE.Mesh).geometry) {
                                const mesh = child as THREE.Mesh;
                                
                                // Clone the geometry and apply the world matrix to get proper positioning
                                const geometry = mesh.geometry.clone();
                                geometry.applyMatrix4(mesh.matrixWorld);
                                
                                // Create solid fill with dark background color
                                const solidMaterial = new THREE.MeshBasicMaterial({ 
                                    color: 0x383e42, // Dark background color
                                    polygonOffset: true, 
                                    polygonOffsetFactor: 1, 
                                    polygonOffsetUnits: 1 
                                });
                                const solidMesh = new THREE.Mesh(geometry, solidMaterial);
                                
                                // Create green wireframe edges
                                const edges = new THREE.EdgesGeometry(geometry, 15);
                                const lineMaterial = new THREE.LineBasicMaterial({ color: 0x42cc5d }); // Green color
                                const wireframe = new THREE.LineSegments(edges, lineMaterial);
                                
                                // Center both meshes
                                solidMesh.position.set(-center.x, -center.y, -center.z);
                                wireframe.position.set(-center.x, -center.y, -center.z);
                                
                                // Add both solid and wireframe to the group
                                modelGroup.add(solidMesh);
                                modelGroup.add(wireframe);
                            }
                        });
                        
                        // Scale the group to fit nicely in view (smaller for product cards)
                        const maxDim = Math.max(size.x, size.y, size.z);
                        const scale = 120 / maxDim; // Slightly smaller than detail page
                        modelGroup.scale.setScalar(scale);
                        
                        // Set the model reference to the group for rotation
                        model = modelGroup;
                        scene.add(modelGroup);
                    }
                },
                undefined,
                (error) => {
                    console.error('Error loading model:', error);
                }
            );

            // Animation loop
            const clock = new THREE.Clock();
            
            function animate() {
                const deltaTime = clock.getDelta();
                
                // Rotate the model slowly
                if (model) {
                    model.rotation.y += deltaTime * 0.3; // Slightly slower rotation for product cards
                }
                
                renderer.render(scene, camera);
                requestAnimationFrame(animate);
            }

            // Handle resize
            const resizeObserver = new ResizeObserver(() => {
                const newSizes = { width: container.clientWidth, height: container.clientHeight };
                camera.aspect = newSizes.width / newSizes.height;
                camera.updateProjectionMatrix();
                renderer.setSize(newSizes.width, newSizes.height);
                renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
            });
            resizeObserver.observe(container);
            
            // Start animation
            animate();
        }

        document.addEventListener('DOMContentLoaded', () => {
            console.log('DOM loaded, initializing 3D viewers...');
            const productImages = document.querySelectorAll('.product-image');
            
            console.log(`Found ${productImages.length} product image containers`);
            
            productImages.forEach((container, index) => {
                if (container instanceof HTMLElement) {
                    const modelPath = container.getAttribute('data-model');
                    if (modelPath) {
                        console.log(`Container ${index}: Initializing viewer for model ${modelPath}`);
                        initViewer(container, modelPath);
                    } else {
                        console.error(`Container ${index}: data-model attribute is missing.`);
                    }
                }
            });

            // Add click handlers to product cards
            const productCards = document.querySelectorAll('.product-card');
            productCards.forEach((card) => {
                card.addEventListener('click', () => {
                    const productType = card.getAttribute('data-product-type');
                    const modelPath = card.getAttribute('data-model-path');
                    
                    if (!productType || !modelPath) {
                        console.error('Product type or model path not found');
                        return;
                    }
                    
                    // Import speakers data and set sessionStorage
                    import('../config/speakers.json').then((speakersModule) => {
                        const speakersData = speakersModule.default;
                        const productData = speakersData.speakerTypes[productType as keyof typeof speakersData.speakerTypes];
                        
                        if (productData) {
                            const speakerDetail = {
                                speakerType: productData.name,
                                name: productData.name,
                                description: productData.description,
                                specs: productData.specs,
                                modelPath: productData.modelPath
                            };
                            
                            sessionStorage.setItem('speakerDetail', JSON.stringify(speakerDetail));
                            window.location.href = '/speaker-detail';
                        }
                    });
                });
            });
        });
    </script>
</body>
</html>