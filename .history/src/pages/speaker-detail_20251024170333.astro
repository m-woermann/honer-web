---
// speaker-detail.astro - Speaker detail page with rotating 3D model
import speakersData from '../config/speakers.json';

// Get model from URL parameter
const url = Astro.url;
const modelPath = url.searchParams.get('model') || '/speaker.glb';

// Find the speaker data from config
let speakerInfo: any = {
    type: 'speaker',
    modelPath: modelPath,
    name: 'Speaker',
    description: 'Professional audio speaker',
    specs: {}
};

for (const [type, data] of Object.entries(speakersData.speakerTypes)) {
    if ((data as any).modelPath === modelPath) {
        speakerInfo = { type, ...data };
        break;
    }
}
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Speaker Details</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="page-container">
        <!-- Main heading -->
        <div class="main-heading">
            <h1>Horner Audio</h1>
        </div>

        <button class="back-button" onclick="window.history.back()">‚Üê Back</button>

        <!-- Top third with 3D canvas -->
        <div class="model-section">
            <canvas class="webgl" data-model={speakerInfo.modelPath}></canvas>
        </div>

        <!-- Bottom two-thirds with speaker info -->
        <div class="info-section">
            <h1 id="speakerTitle">{speakerInfo.name}</h1>
            <p id="speakerDescription">{speakerInfo.description}</p>
            
            <div class="specs-grid" id="specsGrid">
                {speakerInfo.specs && Object.entries(speakerInfo.specs).map(([key, value]) => (
                    <div class="spec-card">
                        <div class="spec-label">{key}</div>
                        <div class="spec-value">{value}</div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: #1a1a1a;
            color: white;
            min-height: 100vh;
        }

        .page-container {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Main heading */
        .main-heading {
            position: fixed;
            top: 40px;
            left: 40px;
            z-index: 1000;
            pointer-events: none;
        }

        .main-heading h1 {
            font-family: 'Michroma', sans-serif;
            font-size: 3rem;
            font-weight: 400;
            color: #42cc5d;
            margin: 0;
            text-shadow: 0 0 20px rgba(66, 204, 93, 0.3);
            letter-spacing: 3px;
        }

        .back-button {
            position: fixed;
            top: 40px;
            right: 40px;
            background: transparent;
            border: 1px solid rgba(66, 204, 93, 0.3);
            color: #42cc5d;
            padding: 0.8rem 1.5rem;
            border-radius: 4px;
            font-family: 'Roboto', sans-serif;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .back-button:hover {
            background: rgba(66, 204, 93, 0.1);
            border-color: rgba(66, 204, 93, 0.5);
        }

        .model-section {
            height: 33.33vh;
            position: relative;
            background: #383e42; /* RAL 7016 Anthracite Grey */
        }

        .webgl {
            width: 100%;
            height: 100%;
            display: block;
        }

        .info-section {
            flex: 1;
            padding: 3rem;
            overflow-y: auto;
            background: #1a1a1a;
        }

        .info-section h1 {
            font-family: 'Michroma', sans-serif;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: white;
        }

        .info-section p {
            font-family: 'Roboto', sans-serif;
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 2rem;
            color: #ccc;
        }

        .specs-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .spec-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .spec-card:hover {
            background: rgba(255, 255, 255, 0.08);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .spec-label {
            font-family: 'Roboto', sans-serif;
            font-size: 0.9rem;
            font-weight: 600;
            color: #999;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .spec-value {
            font-family: 'Roboto', sans-serif;
            font-size: 1.1rem;
            color: white;
            font-weight: 400;
        }

        @media (max-width: 768px) {
            .main-heading h1 {
                font-size: 2rem;
                letter-spacing: 1px;
            }

            .main-heading {
                top: 20px;
                left: 20px;
            }

            .back-button {
                top: 20px;
                right: 20px;
                padding: 0.6rem 1rem;
                font-size: 0.8rem;
            }

            .info-section {
                padding: 2rem 1rem;
            }

            .info-section h1 {
                font-size: 2rem;
            }

            .specs-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
        }
    </style>

    <script type="module">
        import { initViewer } from '../scripts/viewer.js';

        document.addEventListener('DOMContentLoaded', () => {
            console.log('Speaker detail page: DOM loaded, initializing...');
            const canvasContainer = document.querySelector('.model-section');

            if (canvasContainer instanceof HTMLElement) {
                const modelPath = canvasContainer.querySelector('canvas.webgl')?.getAttribute('data-model');

                if (modelPath) {
                    initViewer(canvasContainer, modelPath);
                } else {
                    console.error('Could not find model path.');
                }
            } else {
                console.error('Could not find canvas container.');
            }
        });
    </script>
</body>
</html>