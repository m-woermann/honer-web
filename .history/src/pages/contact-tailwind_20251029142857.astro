    <script>
        // Sticky header animation script
        let ticking = false;
        
        function easeOutCubic(t) {
            return 1 - Math.pow(1 - t, 3);
        }
        
        function updateTitle() {
            const titleContainer = document.querySelector('.title-container');
            const greySection = document.querySelector('.h-18vh');
            
            if (!titleContainer || !greySection) return;
            
            const scrolled = window.scrollY;
            const greyHeight = greySection.offsetHeight;
            const startTransition = greyHeight * 0.1;
            const endTransition = greyHeight * 1.2;
            
            let progress = 0;
            if (scrolled <= startTransition) {
                progress = 0;
            } else if (scrolled >= endTransition) {
                progress = 1;
            } else {
                progress = (scrolled - startTransition) / (endTransition - startTransition);
                progress = easeOutCubic(progress);
            }
            
            // Scale from 1 to 0.375
            const scale = 1 - (progress * 0.625);
            
            // Move from center of grey section to header position
            const viewportHeight = window.innerHeight;
            const greyCenter = greyHeight / 2 + 60; // 60px offset for banner
            const endTop = 30 + 60; // Center of banner (30px) + banner height (60px)
            const currentTop = greyCenter - (progress * (greyCenter - endTop));
            
            titleContainer.style.transform = `translateX(-50%) translateY(-50%) scale(${scale})`;
            titleContainer.style.top = `${currentTop}px`;
            
            ticking = false;
        }
        
        function requestTick() {
            if (!ticking) {
                requestAnimationFrame(updateTitle);
                ticking = true;
            }
        }
        
        window.addEventListener('scroll', requestTick, { passive: true });
        window.addEventListener('load', updateTitle);
    </script>
