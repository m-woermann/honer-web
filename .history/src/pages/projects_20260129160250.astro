---
// portfolio.astro - Projects listing page

// Dynamically import all project JSON files from config/projects directories
const projectFiles = await Astro.glob('../config/projects/*/project.json');

// Create projects array from dynamically imported project configs
const projects = projectFiles.map(projectFile => {
    const project = projectFile.default;
    return {
        ...project,
        keyFeatures: project.specs["Key Features"] || project.specs["key features"] || "Professional audio system"
    };
});
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects - Horner Audio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="page-container">
        <!-- Project Grid -->
        <div class="project-container">
            <div class="nav-buttons">
                <button class="nav-btn" onclick="window.history.back()">BACK</button>
                <a href="/" class="nav-btn">HOME</a>
            </div>
            <h2 class="section-title">Projects</h2>
            
            <div class="project-grid">
                {projects.map((project) => (
                    <div class="project-card" data-project-id={project.id}>
                        <div class="project-image" data-image={project.mainImage}></div>
                        <div class="project-info">
                            <h3 class="project-name">
                                <span class="project-title">{project.name}</span>
                            </h3>
                            <p class="project-key-features">{project.keyFeatures}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>

    <style>
        :root {
            --color-anthracite: #383e42;  /* RAL 7016 Anthracite Grey */
            --color-green: #42cc5d;       /* Horner Audio Green */
            --color-dark-bg: #1a1a1a;     /* Dark background */
            --color-light-grey: #A8BAC6;  /* Light grey for ground */
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: var(--color-dark-bg);
            color: white;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .page-container {
            min-height: 100vh;
            background: var(--color-dark-bg);
        }

        .project-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 40px 40px;
            position: relative;
        }

        .nav-buttons {
            position: absolute;
            top: 20px;
            left: 20px;
            z-index: 1000;
            display: flex;
            gap: 20px;
            align-items: center;
        }

        .nav-btn {
            background: transparent;
            color: #42cc5d;
            border: none;
            padding: 0;
            font-family: 'Michroma', sans-serif;
            font-size: 14px;
            font-weight: 400;
            letter-spacing: 2px;
            text-transform: uppercase;
            cursor: pointer;
            transition: all 0.3s ease;
            text-shadow: none;
            text-decoration: none;
        }

        .nav-btn:hover {
            color: #42cc5d;
            text-shadow: 0 0 8px rgba(66, 204, 93, 0.5);
        }

        .section-title {
            font-family: 'Michroma', sans-serif;
            font-size: 2rem;
            color: var(--color-green);
            margin-bottom: 3rem;
            text-align: center;
        }

        .project-grid {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
            max-width: 1000px;
            margin: 0 auto;
        }

        .project-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 0;
            overflow: hidden;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: row;
            align-items: center;
            text-decoration: none;
            color: white;
            cursor: pointer;
            height: 200px;
        }

        .project-card:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: color-mix(in srgb, var(--color-green) 30%, transparent);
        }

        .project-image {
            width: 250px;
            height: 200px;
            flex-shrink: 0;
            background: var(--color-anthracite);
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            position: relative;
        }

        .project-info {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .project-name {
            font-family: 'Roboto', sans-serif;
            font-size: 1.3rem;
            font-weight: 600;
            color: white;
            margin-bottom: 0.8rem;
        }

        .project-title {
            color: white;
        }

        .project-key-features {
            font-size: 0.95rem;
            color: #42cc5d;
            font-weight: 500;
            font-style: italic;
            line-height: 1.4;
        }

        @media (max-width: 768px) {
            .project-container {
                padding: 40px 20px 40px;
            }

            .back-button {
                top: 20px;
                left: 20px;
            }

            .project-card {
                flex-direction: column;
                height: auto;
            }

            .project-image {
                width: 100%;
                height: 200px;
            }

            .project-info {
                padding: 1rem;
            }

            .section-title {
                font-size: 1.5rem;
                margin-bottom: 2rem;
                margin-top: 60px;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            console.log('DOM loaded, initializing project images...');
            
            // Set background images for project cards
            const projectImages = document.querySelectorAll('.project-image');
            projectImages.forEach((imageElement) => {
                const imagePath = imageElement.getAttribute('data-image');
                if (imagePath && imageElement instanceof HTMLElement) {
                    imageElement.style.backgroundImage = `url('${imagePath}')`;
                }
            });

            // Add click handlers to project cards
            const projectCards = document.querySelectorAll('.project-card');
            projectCards.forEach((card) => {
                card.addEventListener('click', () => {
                    const projectId = card.getAttribute('data-project-id');
                    
                    if (!projectId) {
                        console.error('Project ID not found');
                        return;
                    }
                    
                    // Navigate to project detail page
                    window.location.href = `/project-detail?id=${projectId}`;
                });
            });
        });
    </script>
</body>
</html>