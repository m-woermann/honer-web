---
// StaticPageLayout.astro - Static page layout component without animations
export interface Props {
  title: string;
  pageTitle: string;
  description?: string;
}

const { title, pageTitle, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} - Horner Audio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Michroma&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <style>
        .title-static {
            position: fixed;
            left: 50%;
            top: 32px; /* Already "scrolled" position */
            transform: translateX(-50%) translateY(-50%) scale(0.4);
            z-index: 950;
        }
    </style>
</head>
<body class="font-roboto bg-dark-bg text-white min-h-screen overflow-x-hidden m-0 p-0">
    <!-- Static top banner with fixed height -->
    <div class="fixed top-0 left-0 w-full h-16 bg-anthracite z-[900] flex items-center justify-center">
        <div class="absolute left-5 flex gap-5 items-center">
            <button id="backButton" class="font-michroma text-sm font-normal text-horner-green tracking-[2px] uppercase transition-all duration-300 hover:text-horner-green cursor-pointer bg-transparent border-none p-0" 
                    style="text-shadow: none; transition: text-shadow 0.3s ease;">BACK</button>
            <a href="/" id="homeButton" class="font-michroma text-sm font-normal text-horner-green tracking-[2px] uppercase transition-all duration-300 hover:text-horner-green cursor-pointer no-underline" 
                    style="text-shadow: none; transition: text-shadow 0.3s ease;">HOME</a>
        </div>
    </div>

    <div class="pt-16">
        <!-- Remove grey section to prevent any scroll-based movement -->
        <div class="title-static">
            <h1 class="font-michroma text-5xl sm:text-7xl md:text-9xl lg:text-10xl text-white m-0 font-normal tracking-wider leading-none text-center whitespace-nowrap" style="max-height: 80px; font-size: clamp(3rem, 8vw, 5rem);">{pageTitle}</h1>
        </div>

        <!-- Content section -->
        <div class="py-0 px-6 md:px-12 pb-12 bg-dark-bg min-h-screen mt-16">
            {description && (
                <p class="font-roboto text-lg md:text-xl lg:text-2xl leading-relaxed mb-12 text-gray-300 mt-12">{description}</p>
            )}
            
            <slot />
        </div>
    </div>

    <script>
        // Back button event handlers (keep button functionality)
        const backButton = document.getElementById('backButton');
        if (backButton) {
            backButton.addEventListener('click', () => {
                window.history.back();
            });
            
            backButton.addEventListener('mouseover', () => {
                backButton.style.textShadow = '0 0 8px rgba(66, 204, 93, 0.5)';
            });
            
            backButton.addEventListener('mouseout', () => {
                backButton.style.textShadow = 'none';
            });
        }
    </script>
</body>
</html>