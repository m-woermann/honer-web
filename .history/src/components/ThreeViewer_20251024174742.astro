    margin: 0;
    padding: 0;
    position: relative;
  }
  .webgl {
    width: 100%;
    height: 100%;
  }

  /* Loading screen */
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #1a1a1a;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10000;
    transition: opacity 0.5s ease;
  }

  .loading-screen.hidden {
    opacity: 0;
    pointer-events: none;
  }

  .loading-content {
    text-align: center;
    color: white;
  }

  .loading-content h2 {
    font-family: 'Michroma', sans-serif;
    color: #42cc5d;
    margin-bottom: 2rem;
    font-size: 1.5rem;
  }

  .loading-bar {
    width: 300px;
    height: 4px;
    background: rgba(66, 204, 93, 0.2);
    border-radius: 2px;
    overflow: hidden;
    margin: 0 auto 1rem;
  }

  .loading-progress {
    height: 100%;
    background: #42cc5d;
    width: 0%;
    transition: width 0.3s ease;
    box-shadow: 0 0 10px rgba(66, 204, 93, 0.5);
  }

  .loading-content p {
    font-family: 'Roboto', sans-serif;
    color: #999;
